function [ orth_dist ] = orth_dist( input_args )
%ORTH_DIST Summary of this function goes here
%   Detailed explanation goes here

A = [3;4;5;5];

B = [2;4;3;5];


a1 =A(1:2,1);
a2 =A(3:4,1);

b1 = B(1:2,1);
b2 = B(3:4,1);


% translate to origin

a = a2 - a1;
theta = -atan2(a(2),a(1));

% rotate by theta

R = [cos(theta), - sin(theta); sin(theta), cos(theta)];

R*a;

b1_t = b1 - a1;
b2_t = b2 - a1;

b1_tr = R*b1_t;
b2_tr = R*b2_t;

if (b1_tr(1) < 0 && b2_tr(1) > 0) || (b1_tr(1) > 0 && b2_tr(1) < 0)
    fprintf('orthaganol cross\n');

    d = b1_tr(2) + (b2_tr(2) - b2_tr(1)) * abs(b1_tr(1)) / (abs(b1_tr(1)) + abs(b1_tr(2)))

else
    fprintf('not an orthagonal cross\n')
end



end

